<Window x:Class="PdfSearch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PdfSearch"
        xmlns:vm="clr-namespace:PdfSearch.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:MainWindowViewModel}">
            <StackPanel>
                <Button Content="Add pdf file" Command="{Binding AddPdfFileCommand}"/>
                <ItemsControl ItemsSource="{Binding PdfFiles}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding }"/>
                                <Button Content="X" Command="{Binding RemovePdfFileCommand}"/>
                            </StackPanel>
                        </DataTemplate>
                     </ItemsControl.ItemTemplate>
                </ItemsControl>

                <Button Content="Add Csv file" Command="{Binding AddCsvFileCommand}"/>
                <Button Content="Search" Command="{Binding SearchCommand}"/>

            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    <ContentControl Content="{Binding}"/>
</Window>
